<h1>Nick's Burger Joint</h1>

<img src="/assets/imgs/burger.svg" alt="Burger">

<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
     {{#if devoured}}
     <li>
       {{burger_name}}
     </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Burgers that have not been devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button id="submit" type="submit">Add Burger</button>
</form>
